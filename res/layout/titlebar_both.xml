<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlebar_both_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/detail_bg"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/titlebar_both_left_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/detail_bg"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titlebar_both_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/tool_back"
                android:textColor="@color/nw_tx_blue"
                android:textSize="@dimen/title_left" />
        </LinearLayout>

       <!--  <LinearLayout
            android:id="@+id/titlebar_both_right_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titlebar_both_right_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="保存"
                android:textColor="@color/nw_tx_blue" />
        </LinearLayout> -->

        <LinearLayout
            android:id="@+id/titlebar_both_center_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/titlebar_both_right_layout"
            android:layout_toRightOf="@+id/titlebar_both_left_layout"
            
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/titlebar_both_center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="@string/title_origin"
                android:textColor="#1E90FF"
                android:textSize="@dimen/title_center" />

            <TextView
                android:id="@+id/titlebar_both_center_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textSize="@dimen/title_left" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/nw_bg_gradient" />

</LinearLayout>